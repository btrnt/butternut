{
  "name": "Butternut",
  "description": "Checks whether the selected text is written by a bot or not.",
  "version": "0.1",
  "manifest_version": 2,
  "icons": {
    "16": "/assets/icon.png"
  },
  "background": {
    "scripts": [
      "./js/background.js"
    ]
  },
  "options_page": "./options.html",
  "browser_action": {
    "default_title": "Butternut",
    "default_popup": "./popup.html",
    "default_icon": "./assets/icon.png"
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage",
    "contextMenus"
  ]
}
