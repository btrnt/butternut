{
  "name": "Butternut",
  "version": "0.1",
  "description": "Checks whether the selected text is written by a bot or not.",
  "manifest_version": 2,

  "browser_action": {
    "default_title": "Butternut",
    "default_icon": "icon.png",
    "default_popup": "popup.html" 
  },

  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],

  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["foreground.js"],
      "run_at": "document_start",
      "all_frames": true
  }]
}